

@model CursoMOD119.Models.Item

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Item</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Localizer["Name"]
        </dt>
        <dd class = "col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            @Localizer["Creation Date"]
        </dt>
        <dd class="col-sm-10">
            @Model.CreationDate
        </dd>
        <dt class="col-sm-2">
            @Localizer["Price"] 
        </dt>
        <dd class="col-sm-10">
            @String.Format("{0:#, ##0.00}", Model.Price) €
        </dd>

        <dt class="col-sm-2">
            @Localizer["Discontinued"]
        </dt>
        <dd class="col-sm-10">
            @Model.Discontinued
        </dd>
        
        @{
        
            if (Model.Discontinued == true)
            {
                <h1>Item bloqueado!!!!!!!!</h1>
            }


        }

        
        


    </dl>
</div>
<div>
</div>
